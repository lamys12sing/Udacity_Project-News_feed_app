<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView_newsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        tools:text="Global"/>

    <TextView
        android:id="@+id/textView_newsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        tools:text="2020-04-11"/>

    <TextView
        android:id="@+id/textView_newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_newsSection"
        android:textColor="#000000"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginBottom="8dp"
        tools:text="Small talk and ready-made sandwiches: things I don't miss about normal life | Hadley Freeman"/>
</RelativeLayout>
